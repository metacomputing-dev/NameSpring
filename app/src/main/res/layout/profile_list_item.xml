<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/cardview_profile_item"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/meta_light_green">
        <TextView
            android:id="@+id/profile_list_item_title"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="Title"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/profile_list_item_name"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:ellipsize="end"
            android:text="Name"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/profile_list_item_birthdate"
            android:layout_marginEnd="12dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="Birth"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/profile_list_item_drag_handle"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_drag_handle_24"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>