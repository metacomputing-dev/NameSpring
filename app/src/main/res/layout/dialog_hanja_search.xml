<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_dialog_rounded">

    <!-- 제목 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한자 검색"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="12dp" />

    <!-- 검색 모드 선택 (한글 제약이 없을 때만 표시) -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupSearchMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체"
            android:checked="true"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음(音)"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMeaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뜻"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipHanja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한자"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

    </com.google.android.material.chip.ChipGroup>

    <!-- 검색 힌트 (동적으로 표시) -->
    <TextView
        android:id="@+id/tvSearchHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/bg_hint_rounded"
        android:textSize="13sp"
        android:textColor="@color/primary"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <!-- 검색 입력창 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:hintEnabled="true"
        app:hintAnimationEnabled="true"
        app:expandedHintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- 검색 결과 정보 -->
    <LinearLayout
        android:id="@+id/llResultInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvResultCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="검색 결과: 0개"
            android:textSize="13sp"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/tvSortInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한글 발음순"
            android:textSize="13sp"
            android:textColor="@color/text_secondary" />

    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginBottom="8dp" />

    <!-- 검색 결과 컨테이너 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <!-- 검색 결과 리스트 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:overScrollMode="always" />

        <!-- 로딩 인디케이터 -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- 결과 없음 뷰 -->
        <LinearLayout
            android:id="@+id/llNoResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_search_off"
                android:alpha="0.3"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색 결과가 없습니다"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvNoResultHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다른 검색어로 시도해보세요"
                android:textSize="14sp"
                android:textColor="@color/text_tertiary"
                android:gravity="center" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>