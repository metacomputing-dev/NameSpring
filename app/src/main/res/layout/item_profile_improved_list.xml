<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 첫 줄: 프로필 이름과 생년월일 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프로필 이름"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvBirthDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="2024.03.15"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvBirthTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="14:30"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- 둘째 줄: 이름 -->
            <TextView
                android:id="@+id/tvFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="김◯◯(金◯◯)"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:fontFamily="@font/nanum_myeongjo_bold" />

            <!-- 셋째 줄: 사주 (컴팩트하게) -->
            <TextView
                android:id="@+id/tvSaju"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="甲子 乙丑 丙寅 丁卯"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:fontFamily="@font/nanum_myeongjo" />

            <!-- 넷째 줄: 오행 분포 -->
            <LinearLayout
                android:id="@+id/ohaengDistribution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWoodDist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="木2"
                    android:textColor="@color/ohaeng_wood"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvFireDist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="火3"
                    android:textColor="@color/ohaeng_fire"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvEarthDist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="土1"
                    android:textColor="@color/ohaeng_earth"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvMetalDist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金1"
                    android:textColor="@color/ohaeng_metal"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvWaterDist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水1"
                    android:textColor="@color/ohaeng_water"
                    android:textSize="11sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 다섯째 줄: 오행 정보 -->
            <TextView
                android:id="@+id/tvOhaeng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="부족: 水"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 점수 표시 -->
        <LinearLayout
            android:id="@+id/scoreContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_score_badge"
            android:padding="8dp"
            android:layout_marginStart="12dp">

            <!-- ImageView 대신 TextView 사용 -->
            <TextView
                android:id="@+id/tvSproutIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="🌿"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="77"
                android:textColor="@color/sprout_green"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert"
            android:tint="@color/text_secondary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>