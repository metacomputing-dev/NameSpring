<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sunny_spring_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_sprout"
            android:tint="@color/sprout_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="이름봄"
            android:textColor="@color/main_text"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="@font/nanum_square_round_eb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="내 아이를 위한 이름 짓기"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:fontFamily="@font/nanum_square_round_r" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:progress="0"
            android:max="100"
            android:progressTint="@color/sprout_green"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="0%"
            android:textColor="@color/sprout_green"
            android:textSize="14sp"
            android:fontFamily="@font/nanum_square_round_b"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="데이터 로딩 중..."
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:fontFamily="@font/nanum_square_round_r"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>