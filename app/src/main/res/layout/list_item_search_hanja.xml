<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/cardview_profile_item"
    android:id="@+id/search_hanja_item_cardview"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/meta_light_green">
        <TextView
            android:id="@+id/search_hanja_item_title"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="@string/hint_hanja_mi"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/search_hanja_item_meaning"
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:ellipsize="end"
            android:hint="@string/hint_hanja_meaning_mi"
            android:textSize="18sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>