<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/cardview_profile_item"
    android:id="@+id/naming_list_item_cardview"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/meta_light_green">
        <TextView
            android:id="@+id/naming_list_item_name"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="Name"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/naming_list_item_score"
            android:layout_marginEnd="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="Score"
            android:textSize="12sp"/>

        <ImageButton
            android:id="@+id/naming_list_item_add_favorite"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="12dp"
            android:background="@color/transparent"
            android:contentDescription="TODO"
            android:src="@drawable/round_star_24"
            app:tint="@color/meta_yellow"
            android:scaleType="fitCenter"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>